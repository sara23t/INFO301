<body>
    <div class="container">
        <h1 class="text-center mt-3 mb-3"></h1>
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col2">Links to other resources here:</div>
                    <div class="col"></div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table action="resources" class="table table-bordered">

                        <tr>
                            <% for (var i=0; i < userData.length;i++) { %>
                                <%if (userData[i].MentorView==0 || userData[i].MentorView==1) {%>
                                     <th>
                                        <%- userData[i].ResourceName %>
                                    </th>
                                    <%} }%>
                        </tr>
                        <tr>
                            <% for (var i=0; i < userData.length;i++) { %>
                                <%if (userData[i].MentorView==0 || userData[i].MentorView==1) {%>
                                    <td>
                                        <%- userData[i].ResourceLink %>
                                    </td>
                                    <%} }%>
                                        
                        </tr>

                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
        </script>
</body>

